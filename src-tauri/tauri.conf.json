{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Diaroo",
  "version": "1.0.0",
  "identifier": "com.diaroo.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "pet",
        "title": "Diaroo",
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "width": 64,
        "height": 64,
        "x": 300,
        "y": 500,
        "resizable": false,
        "shadow": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/pets": "pets"
    },
    "windows": {
      "nsis": {
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "languages": ["English"],
        "startMenuFolder": "Diaroo"
      }
    },
    "macOS": {
      "entitlements": "Entitlements.plist",
      "infoPlist": "Info.plist"
    }
  }
}
